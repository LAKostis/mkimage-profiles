#!/bin/sh -efu

cat >>"/etc/inputrc" <<EOF
# do not bell on tab-completion
set bell-style none
EOF

if [ -d /etc/X11/xinit.d ]; then
	cat >/etc/X11/xinit.d/disable-bell <<EOF
#!/bin/sh
# Generated by script during image creation
# Disable bell.
xset -b
EOF

chmod +x "/etc/X11/xinit.d/disable-bell" ||:
fi
